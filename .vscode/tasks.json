{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "group": "build",
            "type": "shell",
            "label": "Browsersync",
            "command": "npx browser-sync --files \"**/*\" --ignore .git --extensions html .",
            "problemMatcher": [],
            "runOptions": {
                "runOn": "folderOpen"
            },
            "options": {
                "env": {
                    "PATH": "/usr/local/bin:${env:PATH}"
                }
            }
        }
    ]
}
